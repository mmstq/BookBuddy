<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".defaultFrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="300dp"
            android:id="@+id/bookbuddy"
            android:layout_centerHorizontal="true"
            android:layout_height="300dp"
            android:src="@drawable/exit_to_back"/>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_below="@id/bookbuddy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:id="@+id/cv_sell"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardBackgroundColor="#ffffff"
                    app:cardUseCompatPadding="true"
                    android:layout_gravity="center"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="7dp"
                    app:cardPreventCornerOverlap="false"
                    android:layout_height="102dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/sell"
                            android:layout_width="wrap_content"
                            android:layout_height="78dp"
                            android:scaleType="centerCrop"
                            android:scaleX="1"
                            android:scaleY="1.1"
                            android:src="@drawable/sell" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:paddingBottom="2dp"
                            android:textSize="13sp"
                            android:text="Sell"/>


                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="100dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardBackgroundColor="#ffffff"
                app:cardUseCompatPadding="true"
                android:layout_gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="7dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="102dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingBottom="1dp">

                    <ImageView
                        android:id="@+id/buy"
                        android:layout_width="wrap_content"
                        android:layout_height="78dp"
                        android:scaleType="centerCrop"
                        android:scaleX="1"
                        android:scaleY="1.1"
                        android:src="@drawable/handbook" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="Books"
                        android:paddingBottom="2dp"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="100dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardBackgroundColor="#ffffff"
                app:cardUseCompatPadding="true"
                android:layout_gravity="center"
                android:padding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="7dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="102dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/listing"
                        android:layout_width="wrap_content"
                        android:layout_height="78dp"
                        android:scaleY="1.1"
                        android:scaleX="1"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/listing"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:paddingBottom="2dp"
                        android:layout_alignParentBottom="true"
                        android:textSize="12sp"
                        android:text="My Books"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll1"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="100dp"
                android:layout_height="102dp"
                android:layout_gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="10dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="7dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/signout"
                        android:layout_width="wrap_content"
                        android:layout_height="78dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:scaleX="1"
                        android:scaleY="1.1"
                        android:src="@drawable/sign_out" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="2dp"
                        android:text="Sign Out"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>