<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sell">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_marginEnd="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textStyle="italic"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:text="@string/first_heading_sell" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:text="@string/IInd_heading" />

            <EditText
                android:id="@+id/bookname"
                android:layout_width="match_parent"
                android:inputType="textCapWords"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:maxLength="40"
                android:layout_marginTop="25dp"
                android:background="@drawable/rounded_edittext"
                android:layout_height="45dp"
                android:hint="Enter Book Name" />

            <Button
                android:id="@+id/category"
                android:layout_marginTop="5dp"
                android:text="Select Category"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:paddingEnd="15dp"
                android:textStyle="normal"
                android:background="@drawable/rounded_edittext"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:paddingStart="15dp"
                android:maxLength="100"
                android:paddingEnd="15dp"
                android:layout_marginTop="5dp"
                android:inputType="textMultiLine"
                android:background="@drawable/rounded_edittext"
                android:layout_height="80dp"
                android:hint="Book Description\nEg. Condition, Edition, Author, \nOld or New" />

            <EditText
                android:id="@+id/semester"
                android:layout_width="match_parent"
                android:paddingStart="15dp"
                android:maxLength="10"
                android:paddingEnd="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edittext"
                android:layout_height="45dp"
                android:hint="Book Semester" />

            <EditText
                android:id="@+id/address"
                android:inputType="textCapWords"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:maxLength="30"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="@drawable/rounded_edittext"
                android:layout_height="45dp"
                android:hint="@string/address" />

            <CheckBox
                android:id="@+id/donate"
                android:layout_marginTop="5dp"
                android:text="@string/sell_or_donate"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/call" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_height="45dp"
                    android:hint="+91"
                    android:editable="false"/>

                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="â‚¹"
                    android:inputType="number"
                    android:maxLength="8"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>