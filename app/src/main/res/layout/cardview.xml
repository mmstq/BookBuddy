<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ffffff"
    app:cardUseCompatPadding="true"
    android:layout_gravity="center_horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="0.5dp"
    app:cardMaxElevation="0.5dp"
    android:layout_height="67dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <ImageView
            android:id="@+id/book"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_toEndOf="@id/book">

            <TextView
                android:id="@+id/upperText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="This Is Me and "
                android:textColor="#616161"
                android:textSize="14.5sp" />

            <TextView
                android:id="@+id/lowertext"
                android:layout_below="@id/upperText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Lower Text"
                android:textColor="#9E9E9E"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:layout_toEndOf="@id/lowertext"
                android:background="@drawable/percent_circle"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:paddingStart="2dp"
                android:paddingEnd="1.9dp"
                android:text="45%"
                android:textColor="@color/darkgrey"
                android:textSize="11.5sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>